<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="10dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        app:shapeAppearanceOverlay="@style/CircleImageAppearance"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@id/main_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_toStartOf="@id/space"
        android:layout_toEndOf="@id/avatar"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:id="@+id/layout_name_and_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/time"
                android:layout_marginEnd="7dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOutline"
                android:textSize="13sp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="18sp"
            android:ellipsize="end"
            android:maxLines="11"
            android:letterSpacing="0.007"
            android:lineSpacingMultiplier="1.2"
            android:breakStrategy="simple"
            app:layout_constraintTop_toBottomOf="@id/layout_name_and_time"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/space"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/layout_comment_buttons"/>

    <LinearLayout
        android:id="@+id/layout_comment_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/layout_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_card_background_radius_28"
            android:clipToOutline="true">

            <LinearLayout
                android:id="@+id/reply"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/mode_comment_outline_24px"/>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/layout_delete_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/shape_card_background_radius_28"
            android:clipToOutline="true">

            <LinearLayout
                android:id="@+id/delete_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/delete_outline_24px"
                    app:tint="@color/negative_red"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>