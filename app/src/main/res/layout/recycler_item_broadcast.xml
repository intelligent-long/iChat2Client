<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    android:paddingBottom="10dp"
    android:paddingHorizontal="19dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="21dp"
        android:layout_centerVertical="true"
        app:shapeAppearanceOverlay="@style/CircleImageAppearance"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@id/main_content"/>

    <TextView
        android:id="@+id/visibility_text"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="15sp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/avatar"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/main_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/avatar"
        android:layout_below="@id/visibility_text">

        <RelativeLayout
            android:id="@+id/layout_name_and_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/long_android_font_ncjk_gs_sc_medium"
                android:textSize="21sp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/time"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOutline"
                android:textSize="13sp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/layout_name_and_time"
            android:textSize="17sp"/>

        <LinearLayout
            android:id="@+id/operation_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text"
            android:layout_marginTop="10dp"
            android:baselineAligned="false"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/layout_like"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1.5"
                android:gravity="start|center_vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/like"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ripple_round_selectable_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingVertical="11dp"
                    android:src="@drawable/favorite_outline_24px" />

                <TextView
                    android:id="@+id/like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#56636F"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_comment"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/comment"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ripple_round_selectable_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingVertical="11dp"
                    android:src="@drawable/mode_comment_outline_24px" />

                <TextView
                    android:id="@+id/comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#56636F"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/share"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ripple_round_selectable_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingVertical="11dp"
                    android:src="@drawable/share_outline_24px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1.5"
                android:gravity="end|center_vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/more"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ripple_round_selectable_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingVertical="11dp"
                    android:src="@drawable/more_vert_24px"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>